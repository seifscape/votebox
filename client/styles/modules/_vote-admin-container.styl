/*  === Vote Admin Container ===
    ================================================= */

.vote-admin-container {
	width: 20em;
	border: 1px solid #ccc;
	padding: 2em;
	margin: 1em;
	display: inline-block;
	vertical-align: text-top;

	h3 {
		basefont-bold();
		typeset(16);
		margin-bottom: 1em;
	}

	h4 {
		margin-bottom: 0.5em;
	}

	.option-select {
		margin-bottom: 1.8em;
	}

	input, textarea {
		padding: 0 0.5em;
		width: 100%;
	}
	
}

.reset-votes-button {
	margin-bottom: 2em;
}

