/*  === Vote Participant List ===
    ================================================= */

.vote-participant-list {
  text-align: center;

  li {
    display: inline-block;
    margin: 0.5em;
    padding: 0.6em 2em;
    width: 18em;
    background-color: #eee;
    color: #888;
    border-radius(2em);
  }

  li.has-voted {
    background-color: #fc3c45;
    color: #fff;
  }
}