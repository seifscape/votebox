/*  === Vote Option ===
    ================================================= */

.vote-option {
  display: inline-block;
  margin: 3em 2em;
  padding-top: 5.3em;
  width: 12em;
  height: 12em;
  background-color: #ccc;
  text-align: center;
  border-radius(100%);
  cursor: pointer;
}

.vote-option:hover {
  background-color: #333;
  color: #fff;
}

/* Chosen Vote */

.vote-option.is-chosen {
  color: #fff;
  background-color: #fc3c45;
}