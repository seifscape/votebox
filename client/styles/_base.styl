/*  === Text Selection ===
    ================================================= */

::-moz-selection { background: selection-color; color: #fff; text-shadow: none; }
::selection { background: selection-color; color: #fff; text-shadow: none; }


/*  === Border Box Default ===
    ================================================= */
    
* { -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box; }